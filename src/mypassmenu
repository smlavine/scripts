#!/bin/sh
# Copyright (c) 2021 Sebastian LaVine <mail@smlavine.com>
# Licensed under the MIT license. See MIT.txt for details.
#
# File:        mypassmenu
# Description: Opens a stylized dmenu prompt with passwords to select from.

( cd $PASSWORD_STORE_DIR;
find -name '*.gpg' | sed -e 's:^./::' -e 's/\.gpg$//' | sort ) |
	dmenu -i -c -fn 20 -sb '#b00' -l 30 |
	xargs pass show -c 2>/dev/null
